FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      dynamicMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dynamicFvMesh       dynamicMotionSolverFvMesh;

motionSolverLibs    (libfiniteVolumeBeamMooring);

motionSolver        sixDoFRigidBodyMotionFvBeam;

sixDoFRigidBodyMotionFvBeamCoeffs
{
    patches         (floatingObject);
    innerDistance   0.05;
    outerDistance   0.35;

    centreOfMass    (0.5 0.5 0.5);

    // Cuboid dimensions
    Lx              0.3;
    Ly              0.3;
    Lz              0.12;

    // Density of the solid
    rhoSolid        500;

    // Cuboid mass
    mass            #eval{ $rhoSolid*$Lx*$Ly*$Lz };

    // Cuboid moment of inertia about the centre of mass
    momentOfInertia (0.08622222 0.08622222 0.144);
//    #codeStream
//    {
//        codeInclude
//        #{
//            #include "diagTensor.H"
//        #};
//
//        code
//        #{
//            scalar sqrLx = sqr($Lx);
//            scalar sqrLy = sqr($Ly);
//            scalar sqrLz = sqr($Lz);
//            os  <<
//                $mass
//               *diagTensor(sqrLy + sqrLz, sqrLx + sqrLz, sqrLx + sqrLy)/12.0;
//        #};
//    };
//
    report          on;
    accelerationRelaxation 0.7;
    //accelerationDamping 0;

    solver
    {
        type FvBeamNewmark;
    }

    constraints
    {
        // fixedPoint
        // {
        //     sixDoFRigidBodyMotionConstraint point;
        //     centreOfRotation (0.5 0.45 0.1);
        // }

       // fixedLine
       // {
       //     sixDoFRigidBodyMotionConstraint line;
       //     centreOfRotation (0.5 0.45 0.1);
       //     direction (0 1 0);
       // }

       // fixedAxis
       // {
       //     sixDoFRigidBodyMotionConstraint axis;
       //     axis (0 1 0);
       // }
    }
    restraints
    {
    	beam1
	{
		sixDoFRigidBodyMotionFvBeamRestraint finiteVolumeBeam;

		attachmentPatch	right;

		beamRegion 	"beamone";

		refAttachmentPt (0.35 0.35 0.44);
	}
    }
}


