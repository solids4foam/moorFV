FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      motionProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dynamicFvMesh       dynamicMotionSolverFvMesh;

motionSolverLibs    ("libfiniteVolumeBeamMooring");

motionSolver        sixDoFRigidBodyMotionFvBeam;

sixDoFRigidBodyMotionFvBeamCoeffs
{
    patches         (floatingObject);
    innerDistance   0.03;
    outerDistance   0.45;

    //- modified mesh morphing parameters
    //-----------------------------------
    containOuterDistance   1;
    xDistance    0.9;
    yDistance    0.1;
    //-----------------------------------

    centreOfMass    (0.0 0.0 -0.016);

    // Cuboid dimensions
    Lx              0.2;
	Ly              0.2;
	Lz              0.132;

    // Cuboid mass
    mass           3.144;

    // Cuboid moment of inertia about the centre of mass
    momentOfInertia (0.015 0.015 0.021);

    report          on;

    accelerationRelaxation 0.7; // this
    //accelerationDamping 0.9;

    solver
    {
        type FvBeamNewmark;
    }

    constraints {}

	restraints
	{
		beam1
	    {
		    sixDoFRigidBodyMotionFvBeamRestraint finiteVolumeBeam;

		    attachmentPatch	right;
		
		    anchorPatch left;
		
		    beamRegion 	"beamone";

		    refAttachmentPt (-0.1 -0.1 -0.0786);
	    }   
		beam2
	    {
		    sixDoFRigidBodyMotionFvBeamRestraint finiteVolumeBeam;

		    attachmentPatch	left;
		
		    anchorPatch	right;		

		    beamRegion 	"beamtwo";

		    refAttachmentPt (0.1 -0.1 -0.0786);
	    }
   	    beam3
	    {
		    sixDoFRigidBodyMotionFvBeamRestraint finiteVolumeBeam;

		    attachmentPatch	right;
		
		    anchorPatch	left;		

		    beamRegion 	"beamthree";

		    refAttachmentPt (-0.1 0.1 -0.0786);
	    }
   	    beam4
	    {
		    sixDoFRigidBodyMotionFvBeamRestraint finiteVolumeBeam;

		    attachmentPatch	left;

		    anchorPatch	right;

		    beamRegion 	"beamfour";

		    refAttachmentPt (0.1 0.1 -0.0786);
	    }

    }
}

